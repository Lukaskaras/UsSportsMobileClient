{
  "defaultSeverity": "error",
  "extends": [
    "tslint-config-standard-plus"
  ],
  "jsRules": {},
  "rules": {
    "semicolon": [
      true,
      "never"
    ],
    "no-require-imports": false,
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [
      false,
      120
    ],
    "quotemark": [
      true,
      "single"
    ],
    "indent": [
      true,
      "spaces",
      2
    ],
    "eofline": true,
    "arrow-parens": false,
    "space-before-function-paren": false,
    "no-circular-imports": {
      "severity": "warning"
    }
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "src/migration/*"
    ]
  }
}
